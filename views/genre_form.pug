extends layout 

block content 
    h1 #{title}

    br
    form(method='POST', action='')
        div.form-group
            div.col-xs-2
                label(for='name') #[strong Genre:] 
                input#name.form-control(type='text', placeholder='fiction', name='name' value=(undefined===genre ? '' : genre.name))
        button.btn.btn-primary(type='submit') Submit

    if errors
        ul
            for error in errors 
                li 
                    span.text-danger #{error.msg}